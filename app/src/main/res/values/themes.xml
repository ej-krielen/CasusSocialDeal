<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CasusSocialDeal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/action_bar_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <!--Text Styles -->
    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/deal_list_title_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="LocationHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/deal_list_title_black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="StandardText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DealSoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/deal_list_sold_blue</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DealPriceText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/deal_list_price</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="DealDetailPriceText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>